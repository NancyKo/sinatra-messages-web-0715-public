<html>
  <head>
    <meta charset="utf-8" />
    <title></title>
    <link href="style.css" rel="stylesheet" />
  </head>
  <body>

    <div class="header">My Messages</div>

    <div id="message-stream">
      <% 
        # for each message in @messages
        # render the template below
        # filling the content from
        # the message
      %>

      <div class="message">
        <% @messages.each do |m| %>
        <div class="to">
          <%= m.to%>
        </div>
        <div class="from">
          <%= m.from %>
        </div>
        <div class="content">
          <%= m.content %>
        </div>
        <div class="time">
          <%= m.created_at %>
        </div>
        <% end %>
      </div>

    </div>
  </body>
</html>
